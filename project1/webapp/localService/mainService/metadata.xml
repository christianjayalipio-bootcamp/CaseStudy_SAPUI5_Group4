<?xml version="1.0" encoding="utf-8" ?>
<edmx:Edmx Version="1.0" xmlns:edmx="http://schemas.microsoft.com/ado/2007/06/edmx">
    <edmx:DataServices m:DataServiceVersion="2.0" xmlns:m="http://schemas.microsoft.com/ado/2007/08/dataservices/metadata">
        <Schema Namespace="OrderModel" xmlns="http://schemas.microsoft.com/ado/2008/09/edm">
            <!-- Product Entity -->
            <EntityType Name="Product">
                <Key>
                    <PropertyRef Name="ProductID" />
                </Key>
                <Property Name="ProductID" Type="Edm.String" Nullable="false" />
                <Property Name="ProductName" Type="Edm.String" />
                <Property Name="PricePerUnit" Type="Edm.Decimal" />
                <Property Name="DeliveringPlantID" Type="Edm.String" />
            </EntityType>
 
            <!-- Order Entity -->
            <EntityType Name="Order">
                <Key>
                    <PropertyRef Name="OrderNumber" />
                </Key>
                <Property Name="OrderNumber" Type="Edm.String" Nullable="false" />
                <Property Name="CreationDate" Type="Edm.DateTime" />
                <Property Name="ReceivingPlantID" Type="Edm.String" />
                <Property Name="DeliveringPlantID" Type="Edm.String" />
                <Property Name="Status" Type="Edm.String" />
            </EntityType>
 
            <!-- OrderProduct Entity -->
            <EntityType Name="OrderProduct">
                <Key>
                    <PropertyRef Name="OrderProductID" />
                </Key>
                <Property Name="OrderProductID" Type="Edm.String" Nullable="false" />
                <Property Name="OrderNumber" Type="Edm.String" />
                <Property Name="ProductID" Type="Edm.String" />
                <Property Name="Quantity" Type="Edm.Int32" />
                <Property Name="TotalPrice" Type="Edm.Decimal" />
            </EntityType>
 
            <!-- Entity Sets -->
            <EntityContainer Name="OrderServiceEntities">
                <EntitySet Name="Plants" EntityType="OrderService.Plant" />
                <EntitySet Name="Products" EntityType="OrderService.Product" />
                <EntitySet Name="Orders" EntityType="OrderService.Order" />
                <EntitySet Name="OrderProducts" EntityType="OrderService.OrderProduct" />
            </EntityContainer>
        </Schema>
    </edmx:DataServices>
</edmx:Edmx>
 