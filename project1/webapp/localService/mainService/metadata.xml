<?xml version="1.0" encoding="utf-8"?>
<edmx:Edmx Version="1.0" xmlns:edmx="http://schemas.microsoft.com/ado/2007/06/edmx">
  <edmx:DataServices m:DataServiceVersion="2.0" xmlns:m="http://schemas.microsoft.com/ado/2007/08/dataservices/metadata">
    <Schema Namespace="OrderModel" xmlns="http://schemas.microsoft.com/ado/2008/09/edm">

      <!-- =================== -->
      <!-- Entity: Order       -->
      <!-- =================== -->
      <EntityType Name="Order">
        <Key>
          <PropertyRef Name="OrderID" />
        </Key>
        <Property Name="OrderID" Type="Edm.Int32" Nullable="false" />
        <Property Name="CreatedOn" Type="Edm.DateTime" Nullable="false" />
        <Property Name="ReceivingPlant" Type="Edm.String" />
        <Property Name="DeliveringPlant" Type="Edm.String" />
        <Property Name="Status" Type="Edm.String" />

        <!-- Navigation to Products -->
        <NavigationProperty 
          Name="Products"
          Relationship="OrderModel.Order_Products"
          FromRole="Order_Principal"
          ToRole="Order_Products_Dependent" />
      </EntityType>

      <!-- =================== -->
      <!-- Entity: Product     -->
      <!-- =================== -->
      <EntityType Name="Product">
        <Key>
          <PropertyRef Name="ProductID" />
        </Key>
        <Property Name="ProductID" Type="Edm.Int32" Nullable="false" />
        <Property Name="ProductName" Type="Edm.String" />
        <Property Name="Quantity" Type="Edm.Int32" />
        <Property Name="PricePerQuantity" Type="Edm.Decimal" Precision="18" Scale="2" />
      </EntityType>

      <!-- =================== -->
      <!-- Association: Order -> Products -->
      <!-- =================== -->
      <Association Name="Order_Products">
        <End Type="OrderModel.Order" Role="Order_Principal" Multiplicity="1" />
        <End Type="OrderModel.Product" Role="Order_Products_Dependent" Multiplicity="*" />
      </Association>

      <!-- =================== -->
      <!-- Entity Container    -->
      <!-- =================== -->
      <EntityContainer Name="OrderEntities" m:IsDefaultEntityContainer="true">
        <EntitySet Name="Orders" EntityType="OrderModel.Order" />
        <EntitySet Name="Products" EntityType="OrderModel.Product" />

        <!-- Navigation binding -->
        <AssociationSet Name="Order_Products" Association="OrderModel.Order_Products">
          <End Role="Order_Principal" EntitySet="Orders" />
          <End Role="Order_Products_Dependent" EntitySet="Products" />
        </AssociationSet>
      </EntityContainer>

    </Schema>
  </edmx:DataServices>
</edmx:Edmx>