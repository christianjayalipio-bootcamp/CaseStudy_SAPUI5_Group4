<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.ui5.trng.project1.controller.CreateOrder">
    <Page id="page3" title="Create Order" floatingFooter="true">
        <content>
        <Panel xmlns="sap.m" width="auto" expanded="true" id="pnl_orderDetails" class="sapUiResponsiveMargin">
            <headerToolbar>
                <Toolbar id="tb1_orderDetails">
                    <Title id="title_orderDetails" text="Order Details"/>
                    <ToolbarSpacer id="header_ToolbarSpacer"/>
                    </Toolbar>      
            </headerToolbar>
            <content>
            <HBox id="_IDGenHBox" justifyContent="Center" >
            <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ColumnLayout" id="form_OrderDetails">
            <sap.ui.layout.form:content>
                <Label xmlns="sap.m" text="Receiving Plant" id="label1" required="true"/>
                <Input xmlns="sap.m" id="recPlant" type="Text" value="{ReceivingPlant}" placeholder="" showValueHelp="true" valueHelpRequest=".onValueHelpRequest" width="15rem"/>
                <Label xmlns="sap.m" text="Delivering Plant" id="label2" required="true"/>
                <Input xmlns="sap.m" id="delPlant" type="Text" value="{DeliveringPlant}" placeholder="" showValueHelp="true" valueHelpRequest=".onValueHelpRequest" width="15rem"/>
            </sap.ui.layout.form:content>
        </sap.ui.layout.form:SimpleForm>
            </HBox>  
            </content>
            </Panel>
           
        <Panel xmlns="sap.m" width="auto" expanded="true" id="pnl_Products" class="sapUiResponsiveMargin">
            <headerToolbar>
                <Toolbar id="tb2_products">
                    <Title id="title_products" text="Products"/>
                    <ToolbarSpacer id="_IDGenToolbarSpacer2"/>
                    <Button xmlns="sap.m" id="btn_addProducts" icon="sap-icon://add"/>
                    <content>
                        <Button xmlns="sap.m" id="btn_deleteProducts" icon="sap-icon://delete"/>
                    </content>
                    </Toolbar>
            </headerToolbar>
            <content>
               <Table items="{flat>/Orders}">
            <columns>
                <Column>
                    <Text text="Product Name" />
                </Column>
                <Column>
                    <Text text="Quantity" />
                </Column>
                <Column>
                    <Text text="Price per Quantity" />
                </Column>
                <Column>
                    <Text text="Total Price" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{flat>ProductName}" />
                        <Text text="{flat>Quantity}" />
                        <Text text="{flat>PricePerQuantity}" />
                        <Text text="{flat>TotalPrice}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
 
            </content>
            </Panel>
    </content>
    <footer>
        <OverflowToolbar id="footer_OverflowToolbar">
            <ToolbarSpacer id="footer_ToolbarSpacer"/>
            <Button id="Save" type="Accept" text="Save"/>
            <Button id="Cancel" type="Reject" press="onPressCancel" text="Cancel"/>
        </OverflowToolbar>
    </footer>
 
    </Page>
</mvc:View>