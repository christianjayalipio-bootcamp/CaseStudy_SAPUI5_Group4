<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="com.ui5.trng.project1.controller.DetailsOrder">

    <Page id="PAGE3" title="Order Details">
        <content>

            <!-- Order Header Panel -->
            <Panel id="orderdetailpnl" headerText="Order Detail" class="sapUiResponsiveMargin" width="auto">
  <HBox id="HBox_Center" justifyContent="Center" width="100%">
                <VBox id="ordernumber" class="sapUiSmallMargin" width="500px">
                    <HBox id="HBox1">
                        <Label id="Label1" text="Order Number:" width="150px" textAlign="End" class="sapUiTinyMarginEnd"/>
                        <Text id="Text" text="{OrderID}" class="boldText" />
                    </HBox>
                    <HBox id="HBox2">
                        <Label id="Label2" text="Created On:" width="150px" textAlign="End" class="sapUiTinyMarginEnd"/>
                        <Text id="Text1" text="{path: 'CreatedOn', formatter: '.formatter.formatOrderDate'}" />
                    </HBox>
                    <HBox id="HBox3">
                        <Label id="Label3" text="Receiving Plant:" width="150px" textAlign="End" class="sapUiTinyMarginEnd"/>
                        <Text id="Text2" text="{ReceivingPlant}" width="150px" />
                    </HBox>
                    <HBox id="HBox4">
                        <Label id="Label4" text="Delivering Plant:" width="150px" textAlign="End" class="sapUiTinyMarginEnd" />
                        <Text id="Text3" text="{DeliveringPlant}"/>
                    </HBox>
                    <HBox id="Box5">
                        <Label id="Label5" text="Status:" width="150px" textAlign="End" class="sapUiTinyMarginEnd" />
                        <Text id="_IDGenText4" text="{Status}" class="boldText"/>
                    </HBox>
                </VBox>
                </HBox>
            </Panel>

            <!-- Products Panel -->
            <Panel width="auto" id="panel3" headerText="Products" class="sapUiResponsiveMargin">
                <!-- Bind to /Products; we will filter in the controller -->
                <Table id="productsTable" inset="false" items="{Products}">
                    <columns>
                        <Column id="_IDGenColumn"><Text id="_IDGenText5" text="Product Name"/></Column>
                        <Column id="_IDGenColumn1" hAlign="Center"><Text id="_IDGenText6" text="Quantity"/></Column>
                        <Column id="_IDGenColumn2" hAlign="End"><Text id="_IDGenText7" text="Price Per Quantity"/></Column>
                        <Column id="_IDGenColumn3" hAlign="End"><Text id="_IDGenText8" text="Total Price"/></Column>
                    </columns>
                    <items>
                        <ColumnListItem id="_IDGenColumnListItem">
                            <cells>
                                <Text text="{ProductName}"/>
                                <Text text="{Quantity}"/>
                                <Text text="{PricePerQuantity}"/>
                                <Text text="{parts: [{path: 'PricePerQuantity'}, {path: 'Quantity'}], formatter: '.formatter.calculateTotalPrice'}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </Panel>

        </content>

        <!-- Footer -->
        <footer>
            <OverflowToolbar id="_IDGenOverflowToolbar" class="sapContrast sapContrastPlus" width="100%">
                <content>
                    <ToolbarSpacer id="_IDGenToolbarSpacer"/>
                    <Button id="_IDGenButton" text="Edit" press="onEditPress"/>
                    <Button id="_IDGenButton1" text="Cancel" press="onCancelPress"/>
                </content>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
