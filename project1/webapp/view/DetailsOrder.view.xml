<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          controllerName="com.ui5.trng.project1.controller.DetailsOrder">

  <Page id="PAGE3" title="Detail" floatingFooter="true">
    <content>

      <!-- Order Header Panel -->
      <Panel id="orderdetailpnl" headerText="Order Detail" class="sapUiResponsiveMargin" width="auto">
      <HBox justifyContent="Center"  width="100%">
        <VBox id="ordernumber" class="sapUiSmallMargin" width="500px">
          <HBox>
            <Label text="Order ID:" width="200px" textAlign="End" class="sapUiTinyMarginEnd"/>
            <Text text="{ordersModel>OrderNumber}" class="boldText"/>
          </HBox>
          <HBox>
            <Label text="Created On:" width="200px" textAlign="End" class="sapUiTinyMarginEnd"/>
            <Text text="{path: 'ordersModel>CreationDate', formatter: '.formatter.formatOrderDate'}" class="boldText"/>
          </HBox>
          <HBox>
            <Label text="Receiving Plant:" width="200px" textAlign="End" class="sapUiTinyMarginEnd"/>
            <Text text="{path: 'ordersModel>ReceivingPlantID', formatter: '.formatter.formatPlant'}"/>
          </HBox>
          <HBox>
            <Label text="Delivering Plant:" width="200px" textAlign="End" class="sapUiTinyMarginEnd"/>
            <Text text="{path: 'ordersModel>DeliveringPlantID', formatter: '.formatter.formatPlant'}" class="boldText"/>
          </HBox>
          <HBox>
            <Label text="Status:" width="200px" textAlign="End" class="sapUiTinyMarginEnd" />
            <ObjectStatus
                text="{ordersModel>Status}"
                state="{path: 'ordersModel>Status', formatter: '.formatter.statusState'}" />
          </HBox>
        </VBox>
     </HBox>
      </Panel>

      <!-- Products Panel -->
      <Panel width="auto" id="panel3" headerText="Products" class="sapUiResponsiveMargin">
        <Table id="productsTable" inset="false" items="{orderProductsModel>/}">
          <columns>
            <Column><Text text="Product Name"/></Column>
            <Column hAlign="Center"><Text text="Quantity"/></Column>
            <Column hAlign="End"><Text text="Price Per Unit"/></Column>
            <Column hAlign="End"><Text text="Total Price"/></Column>
          </columns>
          <items>
            <ColumnListItem>
              <cells>
                <Text text="{orderProductsModel>ProductName}"/>
                <Text text="{orderProductsModel>Quantity}"/>
                <Text text="{orderProductsModel>PricePerUnit}"/>
               <Text text="{orderProductsModel>TotalPrice}"/>

              </cells>
            </ColumnListItem>
          </items>
        </Table>
      </Panel>

    </content>

    <!-- Footer -->
    <footer>
      <OverflowToolbar id="_IDGenOverflowToolbar" class="sapContrast sapContrastPlus" width="100%">
        <content>
          <ToolbarSpacer/>
          <Button text="Edit" press="onEditPress"/>
          <Button text="Cancel" press="onCancelPress"/>
        </content>
      </OverflowToolbar>
    </footer>
  </Page>
</mvc:View>
