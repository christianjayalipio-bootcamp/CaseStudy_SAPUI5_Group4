<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" 
    controllerName="com.ui5.trng.project1.controller.DetailsOrder">

    <Page id="PAGE3" title="Order Details">
        <content>

            <!-- Order Header Panel -->
            <Panel id="orderdetailpnl" headerText="Order Detail" class="sapUiResponsiveMargin" width="auto">

                <VBox id="ordernumber" class="sapUiSmallMargin" alignItems="Start">
                    <HBox id="HBox1" justifyContent="Center">
                        <Label id="Label1" text="Order Number:" width="300px" textAlign="End" class="sapUitinyMarginend"/>
                        <Text id="Text" text="{OrderID}" class="boldText" />
                    </HBox>
                    <HBox id="HBox2">
                        <Label id="Label2" text="Created On:" width="300px" textAlign="End"/>
                        <Text id="Text1" text="{path: 'CreatedOn', formatter: '.formatter.formatOrderDate'}"/>
                    </HBox>
                    <HBox id="HBox3">
                        <Label id="Label3" text="Receiving Plant:" width="300px" textAlign="End"/>
                        <Text id="Text2" text="     {ReceivingPlant}" width="500px" />
                    </HBox>
                    <HBox id="HBox4">
                        <Label id="Label4" text="Delivering Plant:" width="300px" textAlign="End" />
                        <Text id="Text3" text="{DeliveringPlant}"/>
                    </HBox>
                    <HBox id="Box5">
                        <Label id="Label5" text="Status:" width="300px" textAlign="End" />
                        <Text id="_IDGenText4" text="{Status}" class="boldText"/>
                    </HBox>
                </VBox>
            </Panel>

            <!-- Products Panel -->
            <Panel width="auto" id="panel3" headerText="Products" class="sapUiResponsiveMargin">
                <Table id="productsTable" inset="false" items="{Products}">
                    <columns>
                        <Column id="_IDGenColumn"><Text id="_IDGenText5" text="Product Name"/></Column>
                        <Column id="_IDGenColumn1" hAlign="Center"><Text id="_IDGenText6" text="Quantity"/></Column>
                        <Column id="_IDGenColumn2" hAlign="End"><Text id="_IDGenText7" text="Price Per Quantity"/></Column>
                        <Column id="_IDGenColumn3" hAlign="End"><Text id="_IDGenText8" text="Total Price"/></Column>
                    </columns>
                    <items>
                        <ColumnListItem id="_IDGenColumnListItem">
                            <cells>
                                <Text id="_IDGenText9" text="{ProductName}"/>
                                <Text id="_IDGenText10" text="{Quantity}"/>
                                <Text id="_IDGenText11" text="{PricePerQuantity}"/>
                                <Text id="_IDGenText12" text="{parts: [ {path: 'PricePerQuantity'},{path: 'Quantity'}], formatter: '.formatter.calculateTotalPrice'}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </Panel>

        </content>

        <!-- Footer -->
        <footer>
            <OverflowToolbar id="_IDGenOverflowToolbar" class="sapContrast sapContrastPlus" width="100%">
                <content>
                    <ToolbarSpacer id="_IDGenToolbarSpacer"/>
                    <Button id="_IDGenButton" text="Edit" press="onEditPress"/>
                    <Button id="_IDGenButton1" text="Cancel" press="onCancelPress"/>
                </content>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
