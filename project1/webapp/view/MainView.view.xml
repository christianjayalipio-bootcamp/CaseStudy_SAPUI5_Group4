<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    controllerName="com.ui5.trng.project1.controller.MainView">

    <Page id="page" title="{i18n>title}">
        <content>

            <form:SimpleForm
                id="form0"
                editable="true"
                layout="ResponsiveGridLayout">
                <form:content>
                    <FlexBox alignItems="Start" justifyContent="Center">
                        <VBox width="100%" direction="Column" class="sapUiSmallMarginEnd">
                            <items>
                                <Label text="Order Number:"/>
                                <Input width="100%" id="input0"/>
                            </items>
                        </VBox>

                        <VBox width="100%" direction="Column" class="sapUiSmallMarginEnd">
                            <items>
                                <Label text="Creation Date:"/>
                                <DatePicker id="picker0"/>
                            </items>
                        </VBox>

                        <VBox width="100%" direction="Column" class="sapUiSmallMarginEnd">
                            <items>
                                <Label text="Status:"/>
                                <MultiComboBox id="box0" width="100%">
                                    <items>
                                        <core:Item key="Created" text="Created"/>
                                        <core:Item key="Released" text="Released"/>
                                        <core:Item key="Partially Completed" text="Partially Completed"/>
                                        <core:Item key="Delivered" text="Delivered"/>
                                    </items>
                                </MultiComboBox>
                            </items>
                        </VBox>

                        <VBox direction="Column" class="sapUiSmallMarginEnd">
                            <items>
                                <Label width="100%" text=""/>
                                <layout:HorizontalLayout>
                                    <Button press="onGoPress" text="Go" class="sapUiSmallMarginEnd"/>
                                    <Button press="onClearPress" text="Clear"/>
                                </layout:HorizontalLayout>
                            </items>
                        </VBox>
                    </FlexBox>
                </form:content>
            </form:SimpleForm>

            <Panel backgroundDesign="Transparent">
                <Toolbar design="Transparent">
                    <Title id="itemCounter" text="Header"/>
                    <ToolbarSpacer/>
                    <Button icon="sap-icon://add" press="onPressAdd"/>
                    <Button icon="sap-icon://delete" press="onDeletePress" id="deleteButton"/>
                </Toolbar>

                <content>
                    <Table
                        id="table0"
                        items="{/Orders}"
                        noDataText="Drop column list items here and columns in the area above"
                        mode="MultiSelect">
                        <items>
                            <ColumnListItem type="Navigation" press="onPressDetails">
                                <cells>
                                    <Text text="{OrderID}"/>
                                    <Text text="{path: 'CreatedOn', formatter: '.formatter.formatOrderDate'}"/>
                                    <Text text="{path: 'DeliveringPlant', formatter: '.formatter.formatPlant'}"/>
                                    <Text text="{path: 'ReceivingPlant', formatter: '.formatter.formatPlant'}"/>
                                    <ObjectStatus text="{Status}" state="{path: 'Status', formatter: '.formatter.statusState'}"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                        <columns>
                            <Column><header><Label text="Order ID"/></header></Column>
                            <Column><header><Label text="Order Date"/></header></Column>
                            <Column><header><Label text="Delivering Plant"/></header></Column>
                            <Column><header><Label text="Receiving Plant"/></header></Column>
                            <Column><header><Label text="Status"/></header></Column>
                        </columns>
                        <customData>
                            <core:CustomData key="w5g.dt.editable" value="false"/>
                        </customData>
                    </Table>
                </content>
            </Panel>

        </content>
    </Page>
</mvc:View>
