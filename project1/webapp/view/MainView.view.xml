<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          controllerName="com.ui5.trng.project1.controller.MainView">
    <Page title="Order List">
        <content>
                <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout" id="form0">
            <sap.ui.layout.form:content>
                 <FlexBox id="box0_1755609439443" alignItems="Start" justifyContent="Center">
                <VBox width="100%" direction="Column" id="vbox0" class="sapUiSmallMarginEnd">
                    <items>
                        <Label text="Order Number:" id="label0"/>
                        <Input width="100%" id="input0"/>
                    </items>
                </VBox>
                    
                <VBox width="100%" direction="Column" id="vbox1" class="sapUiSmallMarginEnd">
                    <items>
                        <Label text="Creation Date:" id="label1"/>
                        <DatePicker id="picker0" displayFormat="dd-MMM-yyyy" valueFormat="yyyy-MM-dd"/>

                    </items>               
                </VBox>
                <VBox width="100%" direction="Column" id="vbox2" class="sapUiSmallMarginEnd">
                    <items>
                        <Label text="Status:" id="label2"/>
                        <MultiComboBox id="box0" width="100%">
                        <items>
                            <core:Item xmlns:core="sap.ui.core" key="Created" text="Created"/>
                            <core:Item xmlns:core="sap.ui.core" key="Released" text="Released"/>
                            <core:Item xmlns:core="sap.ui.core" key="Partially Completed" text="Partially Completed"/>
                            <core:Item xmlns:core="sap.ui.core" key="Delivered" text="Delivered"/>
                        </items>
                        </MultiComboBox>
                    </items>
                </VBox>
                <VBox direction="Column" id="vbox0_1755609076333" class="sapUiSmallMarginEnd">
                            <items>
                                <Label width="100%" text="" id="label0_1755609181834"/>
                                <sap.ui.layout:HorizontalLayout xmlns:sap.ui.layout="sap.ui.layout" id="layout0">
                                    <sap.ui.layout:content>
                                        <Button xmlns="sap.m" press="onGoPress" text="Go" id="button1" class="sapUiSmallMarginEnd"/>
                                        <Button xmlns="sap.m" press="onClearPress" text="Clear" id="button0"/>
                                    </sap.ui.layout:content>
                                </sap.ui.layout:HorizontalLayout>
                            </items>
                </VBox>
                </FlexBox>
            </sap.ui.layout.form:content>
        </sap.ui.layout.form:SimpleForm>

       <Panel backgroundDesign="Transparent">
        <Toolbar id="toolbar1" design="Transparent">

                <Title id="itemCounter" text="Header"/>
                    <ToolbarSpacer/>
                    <Button icon="sap-icon://add" press="onPressAdd"/>
                    <Button icon="sap-icon://delete" press="onDeletePress" id="button1_1755610909599"/>
                    <content/>
                </Toolbar>

            <Table id="orderTable"
                   items="{ordersModel>/Orders}"
                   mode="MultiSelect"
                   noDataText="No orders found"
                   >
                <columns>
                    <Column><header><Label text="Order Number"/></header></Column>
                    <Column><header><Label text="Creation Date"/></header></Column>
                    <Column><header><Label text="Delivering Plant"/></header></Column>
                    <Column><header><Label text="Receiving Plant"/></header></Column>
                    <Column><header><Label text="Status"/></header></Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" press="onPressDetails">
                        <cells>
                            <Text text="{ordersModel>OrderNumber}"/>
                            <Text text="{path: 'ordersModel>CreationDate', formatter: '.formatter.formatOrderDate'}"/>                            
                            <Text text="{path: 'ordersModel>DeliveringPlantID', formatter: '.formatter.formatPlant'}"/>
                            <Text text="{path: 'ordersModel>ReceivingPlantID', formatter: '.formatter.formatPlant'}"/>                            
                            <ObjectStatus text="{ordersModel>Status}" state="{path: 'ordersModel>Status', formatter: '.formatter.statusState'}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            </Panel>
        </content>
    </Page>
</mvc:View>